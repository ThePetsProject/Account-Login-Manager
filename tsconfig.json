{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "plugins": [
      {
        "transform": "ts-nameof",
        "type": "raw"
      }
    ],
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@database/*": [
        "src/infrastructure/database/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "esModuleInterop": true
  },
  "exclude": [
    "./node_modules/**/*",
    "./docker/*",
    "./.vscode/*",
    "./build/**/*",
    "./coverage",
    ".idea/*"
  ]
}